
@model List<Product>


<div class="card shadow">
    <div class="card-header bg-dark bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product List</h2>
            </div>
        </div>
    </div>
    <div>
        <div>
            <div class="row pt-2 pb-3 ">
                <div class="col-12 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="row m-1   btn btn-outline-primary">
                        <i class="bi bi-plus-square"></i> Create New Product
                    </a>

                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Category</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.Id))
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.ISBN</td>
                        <td>@item.Author</td>
                        <td>@item.Price</td>
                        <td>@item.Category.Name</td>
                        <td>
                            <div class="text-end">
                                <a asp-controller="Product" asp-action="Upsert" asp-route-id=@item.Id class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger">
                                    <i class="bi bi-x-square"></i> Delete
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
