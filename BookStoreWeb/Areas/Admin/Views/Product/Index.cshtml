
@model List<Product>


<div class="card shadow">
    <div class="card-header bg-dark bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Product List</h2>
            </div>
        </div>
    </div>
    <div>
        <div>
            <div class="row pt-2 pb-3 ">
                <div class="col-12 text-end">
                    <a asp-controller="Product" asp-action="Upsert" class="row m-1   btn btn-outline-primary">
                        <i class="bi bi-plus-square"></i> Create New Product
                    </a>

                </div>
            </div>
        </div>
        <table id="tblData" class="table table-striped table-bordered" style="width:95%">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Category</th>

                </tr>
            </thead>

        </table>
    </div>
</div>

@section Scripts{ 
    <script src="~/js/Product.js"></script>
}

