@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="p-2">
                <div class="card ">
                    <img src="@(item.ImageUrl)" class=" border-1 rounded" style="object-fit: cover; height: 300px;"> 
                    <div class="card-body">
                        <p class="card-title h5 text-center">@item.Title</p>
                        <p class="card-title h5 text-opacity-75 text-danger-emphasis text-center"> by @item.Author</p>
                        <p class="text-dark text-wrap text-center">@item.ListPrice.ToString("c")</p>
                        <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-pid="@item.Id" class="btn btn-primary bg-gradient d-block mx-auto">Details</a> 
                    </div>
                </div>
            </div>
        </div>
    }
</div>