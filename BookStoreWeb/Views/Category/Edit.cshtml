@model Category


<div class="card shadow">
    <div class="card-header bg-dark bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Edit Category</h2>
            </div>
        </div>
    </div>
    <div>
        <form method="post">
            <div>
                @*<input asp-for="ID" hidden />  if instead of 'id', the name was 'category id' we should put this,
                because if not the id will not be assignd to the mdoel and the id will be zero*@
                @*<div asp-validation-summary="All" class="text-danger"></div>*@
                <div class="form-floating py-1 col-12 m-2">
                    <input asp-for="Name" class="form-control border-0 mb-1 " />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-1 col-12 m-2">
                    <input asp-for="DisplayOrder" class="form-control border-0 mb-1" />
                    <label asp-for="DisplayOrder" class="ms-2 "></label>
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
