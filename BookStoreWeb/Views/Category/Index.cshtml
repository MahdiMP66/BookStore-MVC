@model List<Category>


<div class="container">
    <div>
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="row m-1   btn btn-outline-primary">
                    <i class="bi bi-plus-square"></i> Create New Category 
                </a>
                
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="text-end">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id=@item.ID class="btn btn-outline-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>