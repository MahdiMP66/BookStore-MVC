@model List<Category>


<div class="container">
    <div>
        <div class="row pt-4 pb-3">
            <div class="col-5">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-7 text-end">
                <a asp-controller="Category" asp-action="Create" class="row m-1  col-2 btn btn-primary">
                    <i class="bi bi-plus-square"></i> Create 
                </a>
                <a asp-controller="Category" asp-action="Edit" class="row btn m-1 col-2 btn-outline-primary">
                    <i class="bi bi-pencil-square"></i> Edit
                </a> 
                <a asp-controller="Category" asp-action="Delete" class="row m-1 col-2 btn btn-danger">
                    <i class="bi bi-x-square"></i> Delete
                </a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>

                </tr>
            }
        </tbody>
    </table>
</div>