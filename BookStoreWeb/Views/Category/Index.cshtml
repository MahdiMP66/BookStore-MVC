@model List<Category>


<div class="card shadow">
    <div class="card-header bg-dark bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Category List</h2>
            </div>
        </div>
    </div>
    <div>
        <div>
            <div class="row pt-2 pb-3 ">   
                <div class="col-12 text-end">
                    <a asp-controller="Category" asp-action="Create" class="row m-1   btn btn-outline-primary">
                        <i class="bi bi-plus-square"></i> Create New Category
                    </a>

                </div>
            </div>
        </div>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Order</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
                {
                    <tr>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.DisplayOrder</td>
                        <td>
                            <div class="text-end">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id=@item.ID class="btn btn-outline-primary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-outline-danger">
                                    <i class="bi bi-x-square"></i> Delete
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
