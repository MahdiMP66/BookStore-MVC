@model Category



<div class="card shadow">
    <div class="card-header bg-dark bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white">Delete Category</h2>
            </div>
        </div>
    </div>
    <div>
        <form method="post">
            <div>
                @*<input asp-for="ID" hidden />  if instead of 'id', the name was 'category id' we should put this,
                because if not the id will not be assignd to the mdoel and the id will be zero*@
                <div class="form-floating py-1 col-12 m-1">
                    <input asp-for="Name" disabled class="form-control border-0 " />
                    <label asp-for="Name" class="ms-2"></label>                  
                </div>
                <div class="form-floating py-1 col-12 m-1">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 " />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

