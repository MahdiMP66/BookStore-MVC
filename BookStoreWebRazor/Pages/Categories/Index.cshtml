@page
@model BookStoreWebRazor.Pages.Categories.IndexModel
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.categories.OrderBy(c => c.DisplayOrder))
         {
            <tr>
                <td>@item.ID</td>
                <td>@item.Name</td>
                <td>@item.DisplayOrder</td>
            </tr>
         }
    </tbody>
</table>
