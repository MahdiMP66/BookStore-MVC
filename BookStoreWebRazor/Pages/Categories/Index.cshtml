@page
@model BookStoreWebRazor.Pages.Categories.IndexModel


<div class="container">
    <div>
        <div class="row pb-2 pt-3">
            <div class="col-6 ">
                <h2 class="text-primary">Category list</h2>
            </div>
            <div class="col-6 text-end">
                <a class="row btn btn-primary" asp-page="/categories/create">Create new Category</a>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Category Name</th>
                <th>Display Order</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model.categories.OrderBy(c => c.DisplayOrder))
             {
                <tr>
                    <td>@item.ID</td>
                    <td>@item.Name</td>
                    <td>@item.DisplayOrder</td>
                    <td>
                        <div class="text-center">
                            <a class="btn btn-outline-primary col-5" asp-page="/Categories/Edit" asp-route-id="@item.ID">Edit</a>
                            <a class="btn btn-outline-danger col-5" asp-page="/Categories/Delete" asp-route-id=@item.ID>Delete</a>
                        </div>
                    </td>
                       
                </tr>
             }
        </tbody>
    </table>
</div>
